<Window x:Class="Lab02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Account" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Account Number:" Height="28" HorizontalAlignment="Left" Margin="10,12,0,0" Name="label1" VerticalAlignment="Top" Width="100" />
        <Label Content="Account Type:" Height="28" HorizontalAlignment="Left" Margin="10,46,0,0" Name="label2" VerticalAlignment="Top" Width="100" />
        <Label Content="Balance:" Height="28" HorizontalAlignment="Left" Margin="10,80,0,0" Name="label3" VerticalAlignment="Top" Width="100" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="116,15,0,0" Name="NumberTextBox" VerticalAlignment="Top" Width="120" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="116,49,0,0" Name="TypeList" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="116,82,0,0" Name="BalanceTextBox" VerticalAlignment="Top" Width="120" />
        <Button Content="Create" Height="23" HorizontalAlignment="Left" Margin="161,117,0,0" Name="CreateButton" VerticalAlignment="Top" Width="75" Click="CreateButton_Click" />
        <TextBlock Height="125" HorizontalAlignment="Left" Margin="263,0,0,171" Name="ResultTextBlock" VerticalAlignment="Bottom" Width="228" FontSize="13" />
    </Grid>
</Window>
